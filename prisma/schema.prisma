generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Idiomas {
  id        String    @id @default(uuid()) @db.VarChar(36)
  nome      String    @db.VarChar(60)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  usuario   Usuario[]

  @@map("idiomas")
}

model Usuario {
  id                String   @id @default(uuid()) @db.VarChar(36)
  nome              String   @db.VarChar(60)
  idade             Int?      @db.Int
  nacionalidade     String?   @db.VarChar(60)
  descricao         String?   @db.Text
  foto              String?   @db.VarChar(255)
  genero            Genero?   @default(NAO_INFORMADO)
  linguaMaterna     String?   @db.VarChar(60)
  idiomasInterresse Idiomas?  @relation(fields: [idiomasId], references: [id])
  idiomasId         String?
  tempoDeUso        Int?      @db.Int
  mensagensTotais   Int?      @db.Int
  sessoesTotais     Int?      @db.Int
  email             String   @unique @db.VarChar(60)
  senha             String   @db.VarChar(60)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("usuarios")
}

enum Genero {
  HOMEM
  MULHER
  NAO_INFORMADO
}
